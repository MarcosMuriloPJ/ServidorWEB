<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Escola Modelo - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Escola Modelo</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- Mensagem de retorno da API -->
        <div id="msg-retorno" class="alert @TempData["tipoMensagem"]">
            <strong>@TempData["tituloMensagem"]!</strong> @TempData["mensagem"]
        </div>

        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <!-- Display da div correspondente à mensagem de retorno da API -->
    @if (TempData["mensagem"] == null)
    {
        <script>$('#msg-retorno').hide()</script>
    }
    else
    {
        <script>$('#msg-retorno').show()</script>
    }

</body>
</html>
